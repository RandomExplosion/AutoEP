{
    "short_name": "AutoEP",
    "name" : "AutoEP - Bot for Education Perfect",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": 
    [
        "activeTab",
        "storage"
    ],
    
    "background": 
    {
    "scripts": ["background.js"],
    "persistent": false
    },

    "content_scripts": [{
        "matches": ["https://www.educationperfect.com/*list-starter*"],
        "js": ["getanswertable.js"]
      }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    
    "browser_action": {
    
    "default_title": "AutoEP"
    }
}