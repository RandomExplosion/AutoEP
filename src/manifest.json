{
    "short_name": "AutoEP",
    "name" : "AutoEP - Bot for Education Perfect",
    "description": "A bot to help* complete education perfect tasks. Intended for Language perfect vocab tasks.\n #NOTE Currently Doesn't support audio tasks.",
    "version": "1.1.2",
    "manifest_version": 2,

    "icons": 
    {
        "16": "icons/Orange/x16.png",
        "32": "icons/Orange/x32.png",
        "48": "icons/Orange/x48.png",
        "128": "icons/Orange/x128.png"
    },

    "permissions": 
    [
        "tabs",
        "activeTab",
        "storage",
        "clipboardWrite",
        "*://www.educationperfect.com/*"
    ],
    
    "background": 
    {
        "scripts": ["background.js"],
        "persistent": false
    },
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    
    "browser_action": 
    {
        "default_title": "AutoEP",
        "default_popup": "popup/main.html"
    }
}