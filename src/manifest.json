{
    "short_name": "AutoEP",
    "name" : "AutoEP - Bot for Education Perfect",
    "description": "A bot to auto complete education perfect tasks. Intended for Language perfect vocab tasks",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": 
    [
        "tabs",
        "activeTab",
        "storage",
        "http://*/",
        "https://*/"
    ],
    
    "background": 
    {
    "scripts": ["background.js"],
    "persistent": false
    },
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    
    "browser_action": {
    
    "default_title": "AutoEP"
    }
}